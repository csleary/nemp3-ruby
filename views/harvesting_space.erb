<p>
  <%= @message %>
</p>
<ol>
  <% @harvesting_space_list.each do |node| %>
  <li><%= node[:name] %> [<%= node[:ip] %>] &bull; <%= node[:free_slots] %> free slots.</li>
  <% end %>
</ol>
<form class="please-wait-form" action="/harvesting-space" method="post">
  <button class="btn btn-outline-primary btn-block please-wait-button" type="submit">Check Nodes for Free Slots</button>
</form>
